<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Notícia</title>
		</head>
	<body>

		<h1>Adicionar notícia</h1>
		<br/>

		<% if (validacao) { 
			console.log(validacao.length); %>
			<ul>
				<% for (var i = 0; i < validacao.length; i++) { %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
		<% } %>

		<form action="/noticias/salvar" method="POST">
			<label for="titulo">Título</label>
			<input type="text" name="titulo" id="titulo" placeholder="Título" />

			<br/>

			<label for="resumo">Resumo</label>
			<input type="text" name="resumo" id="resumo" placeholder="Resumo" />

			<br>

			<label for="titulo">Autor</label>
			<input type="text" name="autor" id="autor" placeholder="Autor" />

			<br>

			<label for="data_noticia">Data da notícia</label>
			<input type="date" name="data_noticia" id="data_noticia" placeholder="Data da notícia" />

			<br>

			<label for="notícia">Notícia</label>
			<textarea name="noticia" id="noticia" cols="30" rows="5"></textarea>

			<br/>

			<input type="submit" value="enviar">
		</form>

	</body>
</html>